<launch>
    <let name="world_path" value="$(find-pkg-share steer_bot_gazebo)/worlds/my_empty.world.sdf" />

    <let name="gz_bridge_path" value="$(find-pkg-share steer_bot_bringup)/config/gz_bridge.yaml" />

    <include file= "$(find-pkg-share steer_bot_bringup)/launch/steer_bot.launch.xml"/>

    <node name = "gz_bridge" pkg="ros_gz_bridge" exec="parameter_bridge" output="screen" 
          args="--ros-args -p config_file:=$(var gz_bridge_path)" />

    <node name = "gz_camera_bridge" pkg="ros_gz_image" exec="image_bridge" output="screen" 
          args="/camera/image_raw" />

    <include file = "$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="-r -v 4 $(var world_path)"/>
    </include>

</launch>